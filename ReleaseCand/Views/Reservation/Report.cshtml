@model IEnumerable<ReleaseCand.ViewModels.CustomerReportViewModel>

@{
    ViewData["Title"] = "Report";
}

<h2>Report</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfGuests)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfGuests)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerReportViewModelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerReportViewModelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerReportViewModelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
