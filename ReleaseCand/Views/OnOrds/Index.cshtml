@model IEnumerable<ReleaseCand.Models.OnOrd>

@{
    ViewData["Title"] = "Index";
}

<div style="font-size:2em" class="alert alert-info text-center"><b>Your Orders</b></div><hr />



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheeseBurger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lasagna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TiriMisu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheeseCake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrenchFries)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pepsi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sprite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Water)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheeseBurger)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lasagna)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TiriMisu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheeseCake)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrenchFries)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pepsi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sprite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Water)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OnOrdID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OnOrdID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OnOrdID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
